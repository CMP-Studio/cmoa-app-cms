<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h2>Beacons</h2>

      <table class="table table-striped table-bordered table-exhibitions">
        <thead>
          <tr>
            <th class="position">#</th>
            <th>Name</th>
            <th >Major</th>
            <th >Minor</th>
            <th class="actions">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% if @beacons.size > 0 %>
          <% @beacons.each_with_index do |beacon, index| %>
            <tr data-id="<%= beacon.id %>">
              <td class="position"><span><%= (index + 1) %></span></td>
              <td><%= beacon.name %></td>
              <td><%= beacon.major %></td>
              <td><%= beacon.minor %></td>
              <td class="actions"><%= link_to 'Show', beacon, :class => 'btn btn-mini btn-info' %> <%= link_to 'Edit', edit_beacon_path(beacon), :class => 'btn btn-mini' %> <%= link_to 'Delete', beacon, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
            </tr>
          <% end %>
          <% else %>
            <tr>
              <td class="empty" colspan="4"><strong>No beacons have been added yet.</strong></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <hr>

      <p><%= link_to 'Add a Beacon', new_beacon_path, :class => 'btn btn-success' %></p>
    </div>
  </div>
</div>
